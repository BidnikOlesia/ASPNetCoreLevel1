
@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employees</title>
    <style type="text/css">
        body {
            width: 1140px;
            margin: 0 auto;
        }

        h3 {
            margin-top: 25px;
            margin-bottom: 15px;
        }
        th, td{
            padding: 5px;
        }
    </style>
</head>
<body>
    <h3>Сотрудники</h3>
    <hr/>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td>@employee.MiddleName</td>
                <td>@employee.Age</td>
                <td><a href="/Home/Details/@employee.Id">Детали</a></td>
            </tr>
            }
        </tbody>
    </table>
    <p>
        <a href="/">На главную</a>
    </p>
</body>
</html>
