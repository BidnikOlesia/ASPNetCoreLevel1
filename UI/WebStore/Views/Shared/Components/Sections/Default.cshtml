@model WebStore.ViewModels.SelectableSectionsViewModel

<h2>Категории</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->

    @foreach (var paren_section in Model.Sections)
    {
        if (paren_section.ChildSections.Count > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@paren_section.GetHashCode()">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @paren_section.Name
                        </a>
                    </h4>
                </div>
                <div id="@paren_section.GetHashCode()" class="panel-collapse collapse @(paren_section.Id == Model.ParentSectionId ? "in" : null)">
                    <div class="panel-body">
                        <ul>
                            @foreach (var child_section in paren_section.ChildSections)
                            {
                                <li @(child_section.Id == Model.SectionId ? "class=active" : null)>
                            <a asp-controller="Catalog" asp-action="Index" asp-route-SectionId="@child_section.Id">@child_section.Name </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a asp-controller="Catalog" asp-action="Index" asp-route-SectionId="@paren_section.Id">@paren_section.Name</a></h4>
                </div>
            </div>
        }
    }

</div><!--/category-products-->
